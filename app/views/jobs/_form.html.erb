<div class="row">
	<div class="large-6 columns large-centered">
		<%= form_for(@job) do |f| %>
		<% if @job.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
			<ul>
				<% @job.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li><% end %>
			</ul>
		</div>
		<% end %>
		<%= f.label :title %>
		<%= f.text_field :title %>
		
		<%= f.label :employer %>
		<%= f.text_field :employer %>
		
		<%= f.label :practice_area %>
		<%= f.text_field :practice_area %>
		
		<%= f.label :link %>
		<%= f.text_field :link %>
		
		<%= f.submit :class => "small button success radius" %>
		<%= f.submit "Save & Add Another", :class => "small button success radius", :name => "add_another" %>
		<%= link_to 'Back', preview_url %>
		<% end %>
	</div>
</div>
