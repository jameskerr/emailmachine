<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Practice area</th>
    <th>Employer</th>
    <th>Link</th>
    <th>Position</th>
    <th>Archived</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.title %></td>
    <td><%= job.practice_area %></td>
    <td><%= job.employer %></td>
    <td><%= job.link %></td>
    <td><%= job.position %></td>
    <td><%= job.archived %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

